E1=Entry(top,bd=5,textvariable=name)
E1.grid(row=2, column=1)
L3=Label(top,text="AGE:")
L3.grid(row=2, column=2)
E2=Entry(top,bd=5,textvariable=age)
E2.grid(row=2, column=3)
L4=Label(top,text="Gender")
