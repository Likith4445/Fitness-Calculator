import sys
from Tkinter import *
import tkMessageBox
root=Tk()
top=Tk()
top.geometry('600x600+400+300')


top.title('Fitness')
name=StringVar()
age=IntVar()
weight=IntVar()
height=IntVar()
bplow=IntVar()
bphigh=IntVar()
pulserate=IntVar()
rbccount=IntVar()
wbccount=IntVar()
platelets=IntVar()
hb=IntVar()
uricacid=IntVar()
cholestrol=IntVar()
var=IntVar()
var1=IntVar()
f = Frame(top, width=300, height=110)
l1=Label(top,text="WELCOME IN FITNESS WORLD",bg="grey",fg="red")

L2=Label(top,text="Name:")
